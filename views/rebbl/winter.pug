      .col(data-bind="{text:$data.badges.Clawgeous ? '✔' : '❌'}")
      .col(data-bind="{text:$data.badges.youreNotFamousAnymore ? '✔' : '❌'}")
      .col(data-bind="{text:$data.badges.refereeAScrooge ? '✔' : '❌'}")
